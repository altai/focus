-extends "layout.haml"
-block content
  %div
    %table.table.table-striped.table-bordered.table-condensed
      %caption
        %h2
          %small
            Virtual machines
      %thead
        %tr
          %th
            #
          %th
            Name
          %th
            Status
          %th
            User
          %th
            Tenant ID
      %tbody
        -for n, vm in vms
          %tr
            %td
              =n
            %td
              =vm['name']
            %td
              =vm['status']
            %td
              =vm['user_id']
            %td
              =vm['tenant_id']
          