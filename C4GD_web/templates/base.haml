<!DOCTYPE html>
%html lang="en"
  %head
    %meta charset="utf-8"
    %title
      C4GD-web
    %meta name="description" content=""
    %meta name="author" content=""
    -block requirejs
      %script data-main="{{ url_for('static', filename='amd/main_common.js') }}" src="{{ url_for('static', filename='amd/require.js') }}"
    %link rel="shortcut icon" href="{{ url_for('static', filename='img/favicon.ico') }}"
    %link href="{{ url_for('static', filename='stylesheets/app.less') }}" rel="stylesheet/less" type="text/css"  
    -block styles    
    %script type="text/javascript" src="{{ url_for('static', filename='stylesheets/less-1.3.0.min.js') }}"
    
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!-- [if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  %body data-spy="scroll" data-target=".subnav" data-offset="50"
    -block navbar
    -block subnav
    %div.container
      -with messages = get_flashed_messages(with_categories=true)
        -if messages
          %div
            -for category, message in messages
              %div class="alert alert-{{ category }}"
                =message
      -block content

