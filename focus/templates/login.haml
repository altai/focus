-extends "base.haml"
-block amdjs
  {{ super () }}
  %script src="{{ url_for('static', filename='amd/main_login.js') }}"
-block content
  -from "_formhelpers.haml" import render_form_errors, render_field
  %form method="POST" action="." class="well offset4 span4 form-vertical login"
    %legend
      Cloud Web GUI
    {{ render_form_errors(form.csrf_token) }}
    {{ form.hidden_tag() }}
    {{ render_field(form.login) }}
    {{ render_field(form.password) }}
    %button type="submit" class="btn btn-primary"
      Sign in
    -if not config['LDAP_INTEGRATION']:
      %a href="{{ url_for('password_recovery_request') }}"
        password recovery
